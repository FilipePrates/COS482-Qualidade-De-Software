<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity CustomerService.
    -->
    <changeSet id="20210401000001-1" author="jhipster">
        <createTable tableName="customer_service">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="service_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="customer_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="employee_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="customer_satisfaction" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="is_there_extra_expenses" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="order_description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="payment_value" type="double">
                <constraints nullable="true" />
            </column>
            <column name="payment_description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="expense_value" type="double">
                <constraints nullable="true" />
            </column>
            <column name="expense_description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
